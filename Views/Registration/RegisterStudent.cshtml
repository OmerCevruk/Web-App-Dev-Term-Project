@* Views/Registration/RegisterStudent.cshtml *@
@model AthleteTracker.Models.StudentRegistrationViewModel

@{
    ViewData["Title"] = "Student Registration";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Student Registration</h2>
                <form asp-action="RegisterStudent" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Gender" class="form-label"></label>
                        <select asp-for="Gender" class="form-select">
                            <option value="">Select Gender</option>
                            <option value="M">Male</option>
                            <option value="F">Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MedicalConditions" class="form-label"></label>
                        <textarea asp-for="MedicalConditions" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="MedicalConditions" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ParentEmail" class="form-label"></label>
                        <input asp-for="ParentEmail" class="form-control" />
                        <span asp-validation-for="ParentEmail" class="text-danger"></span>
                        <small class="form-text text-muted">Please enter the email address used for parent registration</small>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Register Student</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
