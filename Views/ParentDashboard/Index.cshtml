@using AthleteTracker.Models
@model ParentDashboardViewModel
@{
    ViewData["Title"] = "Parent Dashboard";
}

<div class="container mt-4">
    <h2>Welcome, @User.Identity?.Name</h2>
    
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Your Children</h5>
                </div>
                <div class="card-body">
                    @foreach (var student in Model.Students)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@student.FirstName @student.LastName</h5>
                                <p class="card-text">
                                    <strong>Active Sessions:</strong>
                                </p>
                                @if (student.Enrollments.Any())
                                {
                                    <ul class="list-group">
                                        @foreach (var enrollment in student.Enrollments)
                                        {
                                            <li class="list-group-item">
                                                @enrollment.Session.SessionName
                                                <small class="text-muted d-block">
                                                    @enrollment.Session.DayOfWeek:
                                                    @enrollment.Session.StartTime.ToString("HH:mm") - 
                                                    @enrollment.Session.EndTime.ToString("HH:mm")
                                                </small>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="text-muted">No active sessions</p>
                                }
                                <div class="mt-3">
                                    <a asp-controller="Development" 
                                       asp-action="Index" 
                                       asp-route-studentId="@student.StudentId" 
                                       class="btn btn-outline-primary btn-sm">
                                        View Progress
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Upcoming Payments</h5>
                </div>
                <div class="card-body">
                    @if (Model.UpcomingPayments.Any())
                    {
                        <ul class="list-group">
                            @foreach (var payment in Model.UpcomingPayments)
                            {
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>@payment.Amount.ToString("C")</strong>
                                            <small class="d-block text-muted">
                                                Due: @payment.DueDate.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                        <a asp-controller="Payment" 
                                           asp-action="Index" 
                                           class="btn btn-primary btn-sm">
                                            Pay Now
                                        </a>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No upcoming payments</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
